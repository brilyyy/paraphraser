{
  "build": {
    "beforeDevCommand": "pnpm copy:bin && pnpm dev",
    "beforeBuildCommand": "pnpm copy:bin && pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "parafrase",
    "version": "0.0.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "bin/rust_paraphrase",
            "sidecar": true,
            "args": true
          },
          {
            "name": "bin/chromedriver",
            "sidecar": true,
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Education",
      "copyright": "brilyan.dev",
      "deb": {
        "depends": []
      },
      "externalBin": ["bin/rust_paraphrase", "bin/chromedriver"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.brilyan.parafrase",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "parafrase - brilyan.dev",
        "width": 800
      }
    ]
  }
}
